# Multi-stage build for Angular UI
FROM node:20-alpine AS build-stage

# Set working directory
WORKDIR /app

# Copy Angular UI files
COPY angular-ui/package*.json ./
COPY angular-ui/angular.json ./
COPY angular-ui/tsconfig*.json ./
COPY angular-ui/src ./src

# Install dependencies (suppress deprecation warnings)
RUN npm install --no-audit --no-fund

# Build the application
RUN npm run build

# Production stage
FROM nginx:alpine AS production-stage

# Copy built Angular app from build stage
COPY --from=build-stage /app/dist/windchill-mcp-tools-ui /usr/share/nginx/html

# Copy custom nginx configuration
COPY docker/nginx.conf /etc/nginx/conf.d/default.conf

# Expose port
EXPOSE 8080

# Start nginx
CMD ["nginx", "-g", "daemon off;"]