{
  "name": "windchill-mcp-server",
  "version": "1.0.0",
  "description": "MCP Server for PTC Windchill 13.0.2.x",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "windchill-mcp": "./dist/index.js"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:ui\" --names \"SERVER,UI\" --prefix-colors \"cyan,magenta\"",
    "dev:server": "tsx watch src/index.ts",
    "dev:ui": "cd angular-ui && npm start",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "docker:build": "docker compose -f docker/docker-compose.yml build",
    "docker:up": "docker compose -f docker/docker-compose.yml up -d",
    "docker:down": "docker compose -f docker/docker-compose.yml down",
    "docker:logs": "docker compose -f docker/docker-compose.yml logs -f",
    "docker:dev": "docker compose -f docker/docker-compose.yml -f docker/docker-compose.dev.yml up --build",
    "ui:install": "cd angular-ui && npm install",
    "ui:build": "cd angular-ui && npm run build",
    "ui:serve": "cd angular-ui && npm start",
    "deploy:ui": "./docker/deploy-ui.sh",
    "deploy:all": "docker compose -f docker/docker-compose.yml up -d",
    "verify:docker": "./docker/verify-docker.sh"
  },
  "keywords": [
    "mcp",
    "windchill",
    "plm"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@angular-devkit/build-angular": "^20.3.4",
    "@modelcontextprotocol/sdk": "^1.19.1",
    "axios": "^1.6.8",
    "dotenv": "^16.4.5",
    "express": "^5.1.0",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.6.2",
    "@types/winston": "^2.4.4",
    "concurrently": "^9.2.1",
    "tsx": "^4.20.6",
    "typescript": "latest"
  }
}
